<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppAcademia.TelaPerguntaseDuvidas"
              BackgroundColor="#698FE8">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Perguntas e Duvidas"
                   HorizontalOptions="Center"
                   Margin="10,30,10,10"
                   TextColor="White"/>
            

            <Entry Placeholder="Digite aqui "
                   x:Name="entryDigiteAqui"
                   Margin="20,10,10,10"
                   HorizontalTextAlignment="Center"/>

            <Button Text="Enviar"
                    x:Name="buttonEnviar"
                    VerticalOptions="EndAndExpand"
                    Clicked="ButtonEnviar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>