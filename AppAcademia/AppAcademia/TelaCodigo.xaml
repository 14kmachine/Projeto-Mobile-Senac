<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppAcademia.TelaCodigo"
              BackgroundColor="#698FE8">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Codigo" 
                   HorizontalTextAlignment="Center" 
                   x:Name="entryEmail"
                   Margin="2,40,2,2"/>
            <Entry Placeholder="Senha"
                   HorizontalTextAlignment="Center"
                   x:Name="entrySenha"/>
            <Entry Placeholder="Digite novamente a Senha"
                   HorizontalTextAlignment="Center"
                   x:Name="entryDigiteNovamenteaSenha"/>

            <Button Text="Confirmar"
                    x:Name="buttonConfirmar"
                    HorizontalOptions="FillAndExpand"
                    Margin="10,40"
                    />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>