<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppAcademia.TelaDicasAlimentaçãoeTreino"
              BackgroundColor="#698FE8">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Dicas de Treino e Alimentação"
                   HorizontalOptions="Center"
                   Margin="10,30,10,10"
                   TextColor="White"/>

            <Entry Placeholder="Processando..."
                   x:Name="entryDicas"
                   Margin="20,10,10,10"
                   HorizontalTextAlignment="Center"/>

            <Button Text="Postar"
                    x:Name="buttonPostar"
                    VerticalOptions="EndAndExpand"
                    Clicked="ButtonPostar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>